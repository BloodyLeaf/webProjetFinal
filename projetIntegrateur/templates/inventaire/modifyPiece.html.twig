{% extends 'base.html.twig' %}


{% block stylesheets %}
            <!-- CSS only -->
            <link rel="stylesheet" href="../styles.css"> 

            <!-- bootstrap -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
{% endblock %}

{% block javascripts %}
            <!-- bootstrap -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
{% endblock %}

{% block title %}Modify Piece{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    
    <div class="center-screen">
        <h1>Modifier une piece</h1>

        <div class="form-login">
            {{ form_start(modifyPieceForm) }}
                {{ form_row(modifyPieceForm.nom)}}
                {{ form_row(modifyPieceForm.description) }}
                {{ form_row(modifyPieceForm.QteTotal) }}
                {{ form_row(modifyPieceForm.QteEmprunter) }}
                {{ form_row(modifyPieceForm.QteBrise) }}
                {{ form_row(modifyPieceForm.QtePerdu) }}
                {{ form_row(modifyPieceForm.idCategorie) }}
            {{ form_end(modifyPieceForm) }}
        </div>
    </div>
{% endblock %}
