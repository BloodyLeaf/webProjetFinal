{% extends 'base.html.twig' %}

{% block title %}Inventaire{% endblock %}

{% block body %}
<br>
<br>
<h1> Liste des pi√®ces </h1>
<br>
<br>



<table id="inventaire" class="display responsive compact nowrap" style="width:95%">
    <thead>
        <tr>
            <th >Nom</th>
            <th >Description</th>
            <th >Categorie</th>
            <th >QTE Total</th>
            <th >QTE Emprunter</th>
            <th >QTE Perdu</th>
            <th >QTE Brise</th>
            <th class="none">Image</th>
            <th>Modifer</th>
            <th>Supprimer</th>
            
        </tr>
    </thead>
    <tbody>
        {% for piece in pieces %}
        {#% set ref = "piece/" ~ piece[0].id %#}
         <tr> 
                <td> {{ piece[0].nom }}</td>
                <td> {{ piece[0].description }}</td>
                <td> {{ piece['categorie'] }}</td>
                <td> <input type="text" name="QteTotal" value="{{ piece[0].QteTotal }}" onblur="changeQTE({{piece[0].id}}, this, {{piece[0].QteTotal}})" readonly="true" ondblclick="this.readOnly='';"> </td>
                <td>{{ piece[0].QteEmprunter }}</td>
                <td>{{ piece[0].QtePerdu }}</td>
                <td> {{ piece[0].QteTotal }}</td>
                <td> <a href="#2"> Voir l'image </td>
                <td> <a class="btn btn-primary" href="#" role="button">Modifer</a> </td>
                <td> <a class="btn btn-danger" href="#" role="button">Supprimer</a> </td>
            </tr>
        {% endfor %}
    </tbody>
    <tfoot>
            <tr>
            <th >Nom</th>
            <th >Description</th>
            <th >Categorie</th>
            <th >QTE Total</th>
            <th >QTE Emprunter</th>
            <th >QTE Perdu</th>
            <th >QTE Brise</th>
            <th class="none">Image</th>
            <th>Modifer</th>
            <th>Supprimer</th>
            </tr>
        </tfoot>
</table>


{% endblock %}
